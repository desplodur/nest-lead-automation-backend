# Database (required)
# PostgreSQL connection string. For Docker: postgresql://postgres:postgres@postgres:5432/leads
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# Groq AI (optional; lead creation works without it but AI analysis will be skipped)
GROQ_API_KEY=your_groq_api_key_here

# Server
NODE_ENV=development
PORT=3000

# CORS (comma-separated origins; set to false to disable)
CORS_ENABLED=true
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate limiting
RATE_LIMIT_TTL=900000
RATE_LIMIT_MAX=100
AI_RATE_LIMIT_TTL=60000
AI_RATE_LIMIT_MAX=20
